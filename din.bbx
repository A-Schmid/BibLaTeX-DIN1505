\RequireBibliographyStyle{standard}

\NewBibliographyString{foundat}
\DefineBibliographyStrings{english}{foundat={at\addcolon\addspace},}

\DefineBibliographyStrings{german}{
  editor  = {Hg\adddot},
  editors = {Hg\adddot},
